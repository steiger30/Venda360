// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int         @id @default(autoincrement())
  email     String      @unique
  name      String
  password  String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  customers Customers[]
  sale      Sales[]
  product   Products[]

  @@map("users")
}

model Products {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  nomeProduto String
  preco       String
  descricao   String
  User        Users?   @relation(fields: [userId], references: [id])
  userId      Int?
  Sales       Sales?   @relation(fields: [salesId], references: [id])
  salesId     Int?

  @@map("products")
}

model Customers {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  nome      String
  cpf       String   @unique
  endereco  String
  email     String
  telefone  String
  User      Users?   @relation(fields: [userId], references: [id])
  userId    Int?

  @@map("customers")
}

model Sales {
  id             Int        @id @default(autoincrement())
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  formaPagamento String
  valorApagar    String
  User           Users?     @relation(fields: [userId], references: [id])
  products       Products[]
  userId         Int?
  customersId    Int

  @@map("sales")
}
